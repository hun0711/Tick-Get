<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="back.spring.final_back.board.repository.BoardDao">
    <select id="boardSearch" resultType="BoardDto">
        SELECT *
          FROM Board
         WHERE board_title LIKE CONCAT('%', #{input}, '%')
    </select>

    <select id="boardList" resultType="BoardDto">
        SELECT * FROM Board
    </select>

    <insert id="boardInsert" parameterType="map">
        INSERT INTO Board
         VALUES (#{board_no}, #{board_title}, #{board_content})
    </insert>

</mapper>