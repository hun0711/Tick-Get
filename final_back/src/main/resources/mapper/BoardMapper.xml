<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="back.spring.final_back.board.repository.BoardDao">
    <!-- 전체조회-->
    <select id="selectBoardList" resultType="BoardDto"> select * from board </select>

    <insert id="insertBoardList" parameterType="BoardDto">
        INSERT INTO board
        VALUES(
            #{board_no}
            , #{member_id}
            , #{board_title}
            , #{board_date}
            , #{board_content}
            , #{board_views}
            , #{board_super_no}
            , #{board_group_no}
            , #{board_depth}
            , #{board_reply_count}
            , #{board_check}
        )
    </insert>
</mapper>
