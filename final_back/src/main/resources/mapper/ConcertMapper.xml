<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="back.spring.final_back.concert.repository.ConcertDao">

    <select id="ConcertList" parameterType="String" resultType="ConcertDto">
<!--        select concert_no, codename, title, place, player, main_img, date, guname, org_link, use_fee-->
        SELECT *
          FROM seoul_data
         WHERE codename LIKE #{category}
         ORDER BY date
    </select>

    <select id="ConcertToday" resultType="concertDto">
        SELECT *
          FROM seoul_data
         WHERE date LIKE CONCAT(CURDATE(),"%")
    </select>

    <select id="ConcertSearch" resultType="ConcertDto">
        SELECT *
        FROM Board
        WHERE board_title LIKE CONCAT('%', #{input}, '%')
    </select>

    <insert id="ConcertInsert" parameterType="map">
        INSERT INTO Board
        VALUES (#{board_no}, #{board_title}, #{board_content})
    </insert>

</mapper>